	{{ parent() }}
	<div class="main container">
		<div class="row well">
			<div class="col-md-12">
				<div class="page-header">
					<h2>Registrar Entrada</h2>
				</div>
                {{ form_start(form, { 'attr' : {'role' : 'form'} }) }}
                
                <div class="form-group">
                    {{ form_label(form.nombreEmisor) }}
                    {{ form_widget(form.nombreEmisor, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Nombre del Emisor'} }) }}
